{
    "name": "estamey/advent_of_code",
    "description": "Emily's Advent of Code Exercises",
    "license": ["proprietary"],
    "require": {
        "symfony/console": "^5.2",
        "staabm/annotate-pull-request-from-checkstyle": "^1.4"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.5",
        "phpunit/phpunit": "^8.0",
        "phpstan/phpstan": "^0.12.58",
        "vimeo/psalm": "^4.3",
        "psalm/plugin-phpunit": "^0.15.0",
        "phpstan/phpstan-phpunit": "^0.12.17"
    },
    "autoload": {
        "psr-4": {"Acme\\": "src/"}
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpstan": "phpstan analyse --error-format=checkstyle | vendor/bin/cs2pr --graceful-warnings --colorize",
        "psalm": "vendor/bin/psalm --output-format=github | vendor/bin/cs2pr --graceful-warnings --colorize",
        "psalm-info": "vendor/bin/psalm --show-info=true"
    },
    "config": {
        "platform": {
            "php": "7.4.11"
        }
    }
}
